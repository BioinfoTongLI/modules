nextflow_process {

    name "Test Process MERGEOUTLINES"
    script "../main.nf"
    config "./nextflow.config"
    process "MERGEOUTLINES"

    tag "modules"
    tag "modules_sanger"
    tag "mergeoutlines"

    test("iss - wkt") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test'], // meta map
                    file("/lustre/scratch126/cellgen/cellgeni/tl10/modules/modules/sanger/mergeoutlines/tests/XETG00055__0003753__Hob23-BRA-3_frontal__20230710__174614-24396_44726_28492_48822-diam_40_cp_outlines.wkt", checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("iss - wkt - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test'], // meta map
                    file("/lustre/scratch126/cellgen/cellgeni/tl10/modules/modules/sanger/mergeoutlines/tests/XETG00055__0003753__Hob23-BRA-3_frontal__20230710__174614-24396_44726_28492_48822-diam_40_cp_outlines.wkt", checkIfExists: true)
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
